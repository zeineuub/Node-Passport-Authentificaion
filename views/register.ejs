
<div class="container" >
    <span class="border" style=" margin-left:310px;margin-top:80px; ">
    </br>
            <h1   style="color:#ff3377 "class="text-center  mb-3">
            <i class="fas fa-user-plus"></i>Sign in
            </h1>
            <%- include ('./partials/messages') %>
            <form  class="border border-light p-5" action="/user/register" method="POST">
                <div class="form-group">
                    <label style="color:#0044cc" for="name">Name</label>
                    <input
                    type="name"
                    id="name"
                    name="name"
                    class="form-control"
                    placeholder="Enter Name"
                  
                    value="<%= typeof name != 'undefined' ? name : '' %>"
                    />
                </div>
                <div class="form-group">
                    <label  style="color:#0044cc" for="email">Email</label>
                    <input
                    type="email"
                    id="email"
                    name="email"
                    class="form-control"
                    placeholder="Enter Email"
                    value="<%= typeof email != 'undefined' ? email : '' %>"
                    />
                </div>
                <div class="form-group">
                    <label  style="color:#0044cc" for="password">Password</label>
                    <input
                    type="password"
                    id="password"
                    name="password"
                    class="form-control"
                    placeholder="Create Password"
                    value="<%= typeof password != 'undefined' ? password : '' %>"
                    />
                </div>
                <div class="form-group">
                    <label  style="color:#0044cc"for="password2">Confirm Password</label>
                    <input
                    type="password"
                    id="password2"
                    name="password2"
                    class="form-control"
                    placeholder="Confirm Password"
                    value="<%= typeof password2 != 'undefined' ? password2 : '' %>"
                    />
                </div>
                <button type="submit"  class="btn btn-primary btn-block">
                    Register
                </button>
                 
            <p  class="lead mt-4 text-center">Have An Account? <a  style="color:#ff3377 "href="/user/login">Sign up</a></p>
            <p style="text-align:center">or sign in with</p>
                <div class="center">
                    <a href="#"  class="mx-2" role="button"><i style="color:#ff80aa" class="fab fa-facebook-f light-blue-text"></i></a>
                    <a href="#" class="mx-2" role="button"><i  style="color:#ff80aa"class="fab fa-twitter light-blue-text"></i></a>
                    <a href="#" class="mx-2" role="button"><i  style="color:#ff80aa"class="fab fa-linkedin-in light-blue-text"></i></a>
                    <a href="#" class="mx-2" role="button"><i  style="color:#ff80aa"class="fab fa-github light-blue-text"></i></a>
                </div>
            </form>
            
            
       </span>
  </div>